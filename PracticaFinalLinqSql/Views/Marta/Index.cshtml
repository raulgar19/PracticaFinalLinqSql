@model List<Usuario>

<h1>Lista Usuarios</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Id Curso</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.Apellidos</td>
                <td>@usuario.Email</td>
                <td>@usuario.IdCurso</td>
                <td>
                    <a asp-controller="Marta" asp-action="Details" asp-route-id="@usuario.IdUsuario" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>