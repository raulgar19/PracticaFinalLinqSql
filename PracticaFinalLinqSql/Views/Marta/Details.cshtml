@model PracticaFinalLinqSql.Models.DetallesAlumno

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-badge"></i> Ficha del Alumno
                    </h3>
                </div>

                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            @if (!string.IsNullOrEmpty(Model.Imagen))
                            {
                                <img src="@Model.Imagen"
                                     class="img-fluid rounded-circle border border-4 border-light shadow"
                                     style="width: 180px; height: 180px; object-fit: cover;"
                                     alt="Imagen de @Model.Nombre"
                                     onerror="this.src='https://via.placeholder.com/150';" />
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/150" class="img-fluid rounded-circle" alt="Sin imagen" />
                            }
                        </div>

                        <div class="col-md-8">
                            <h2 class="text-primary fw-bold">@Model.Nombre @Model.Apellidos</h2>
                            <p class="text-muted"><i class="bi bi-envelope"></i> @Model.Email</p>
                            <hr />

                            <dl class="row">
                                <dt class="col-sm-4">Curso:</dt>
                                <dd class="col-sm-8 fw-bold">@Model.NombreCurso</dd>

                                <dt class="col-sm-4">Actividad:</dt>
                                <dd class="col-sm-8">@Model.NombreActividad</dd>

                                <dt class="col-sm-4">Inscripción:</dt>
                                <dd class="col-sm-8">@Model.FechaInscripcion.ToShortDateString()</dd>

                                <dt class="col-sm-4">Capitanía:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.QuiereSerCapitan)
                                    {
                                        <span class="badge bg-success rounded-pill px-3">
                                            <i class="bi bi-star-fill"></i> Quiere ser Capitán
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill px-3">
                                            No solicita capitanía
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="card-footer text-end bg-light">
                    <a asp-controller="Marta" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>